@using Demo.Models
@model IEnumerable<ProductViewModel>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-info pl-3">Product List</h2>
        </div>
    </div>
</div>

<br />
<br />

@if (Model.Count()>0)
{
    <table class="table table-bordered table-striped table-hover" style="width:100%">
        <thead>
            <tr>
                <th>Product</th>
                <th>View</th>
                <th>Price</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.Name</td>
                    <td>
                        <img class="card-img-top img-fluid d-block mx-auto mb-3" style="width:200px" @*src="@WebConstants.ImagePath@product.ProductViewModel.PicturePath"*@ alt="Card image cap">
                    </td>
                    <td>@product.Price.ToString("c")</td>                    
                    <td class="text-center">
                        <a asp-controller="Price" asp-route-id="@product.ProductId" asp-action="AddToBasket" class="btn btn-primary mx-2">
                            Choose quantity
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

else
{
    <p>Product list is Empty</p>
}